<table class="rentbook">
	<tr class='hide'>
		<td>On Statement</td>
		<td>Property</td>
		<td>Payment</td>
		<td>Notes</td>
		<td>Updated</td>
		<td></td>
		<td></td>
	</tr>
	<% @payments.each do | rent | %>
	<tr>
		<td><%=short_date(rent.date)%></td>
		<td class='hide'><%=link_to "#{rent.property.number_and_address1}", rent.property%></td>
		<td class='money'><%=show_money(rent.payment)%></td>
		<td><%=truncate(rent.notes, length: 75, separator: ' ')%></td>
		<td class='hide'><%=short_date(rent.updated_at)%></td>
		<td class='hide'><%=link_to rent_path(rent) do %>
			<i class="fas fa-binoculars"></i>
			<% end %>
		</td>	
		<%if rent_rights? %>
		<td class='hide'><%=link_to edit_rent_path(rent) do %>
			<i class="fas fa-edit"></i>
			<% end %>
		</td>
		<%if admin_rights? %>
		<td class='hide'><%=link_to rent, method: :delete, data: { confirm: 'Are you sure?' } do %>
			<i class="fas fa-trash"></i>
			<% end %>
			<% end %>
			<% end %>

		</td>
	</tr>
	<% end %>
</table>
