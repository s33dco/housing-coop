<!-- for meta data -->
<% title("#{controller_name.titleize}")%>
<% description("List of properties managed by #{ENV['COOP_FULL_NAME']}")%>


<article>
	
	<header class="header">
		<h1><%= ENV['COOP_SHORT_NAME']%> manages <%= pluralize(@properties.size, 'property') %>.</h1>
		</header>

	<section class='detail'>
		<table>
			<% @properties.each do | property | %>
				<tr>
					<td><%= link_to "#{property.number_and_address1}", property_path(property)%></td>
					<% if property_rights? %>
					<td><%=link_to 'Edit', edit_property_path(property) %></td>
					<% if admin_rights? %>
					<td><%= link_to 'Delete', property, 
		                  class: 'button',
		                  method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
		    <% end %>
				</tr>
			<% end %>
		</table>
		</section>

</article>
<% if sec_rights? || admin_rights? %>
	<div class="page-actions">
		<%=link_to 'Add a Property', new_property_path %>
		</div>
<% end %>


		
