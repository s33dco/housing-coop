<!-- for meta data -->
<% title("#{controller_name.titleize}")%>
<% description("Officer Roles #{ENV['COOP_FULL_NAME']}")%>
<article>
	<header class="header">
		<h1>Present <%= ENV['COOP_SHORT_NAME']%> Officers.</h1>
	</header>

	<section class='detail'>
		<table>
		<% @roles.each do |role | %>
		<tr>
		
			<td><%=role.job.title%></td>
			<td><%=role.person.full_name%></td>
			<td>(<%=nice_short_date(role.role_start)%> - <%=nice_short_date(role.role_end)%>)</td>
			<td><%=link_to 'Edit', edit_role_path(role) %></td>
			<td><%= link_to 'Delete', role, 
                  class: 'button',
                  method: :delete, data: { confirm: 'Are you sure?' } %></td>
			<td>email</td>
		</tr>
		<% end %>
		</table>


	</section>

	<div class="page-actions">
		<%= link_to	"Allocate a role", new_role_path %>

	</div>
</article>
