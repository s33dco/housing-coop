<!-- for meta data -->
<% title("#{controller_name.titleize}")%>
<% description("List of Officer Roles #{ENV['COOP_FULL_NAME']}")%>


<article>

	<header class="header">
		<h1>Officer Roles</h1>
	</header>

	<section class='detail'>
		<table>
			<% @jobs.each do |job| %>
			<tr>
				<td><%=job.title %></td>
				<td><%=job.email %></td>
				<td><%=link_to 'Edit', edit_job_path(job) %></td>
				<td><%= link_to 'Delete', @job, 
		                  class: 'button',
		                  method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
		</table>
	</section>



</article>
	<div class="page-actions">
		<%=link_to 'Add a Role', new_job_path %>

		</div>
		