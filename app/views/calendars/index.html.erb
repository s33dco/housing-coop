<!-- for meta data -->
<% title("#{controller_name.titleize}")%>
<% description("Calendar #{ENV['COOP_FULL_NAME']}")%>
<article>
	<header class="header">
		<h1><%= ENV['COOP_SHORT_NAME']%> - Calendar Admin.</h1>
	</header>

	<section class='detail'>
		<table>
			<tr>
				<td>date</td>
				<td>title</td>
				<td>location</td>
				<td>details</td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
			
			<% @events.each do | event | %>
			<tr>
				<td><%= short_date(event.date_time) %></td>
				<td><%= event.title %></td>
				<td><%= event.where %></td>
				<td><%= truncate(event.details, length: 30, separator: ' ')%></td>
				<td><%=link_to 'view', calendar_path(event) %></td>
				<td><%=link_to 'edit', edit_calendar_path(event) %></td>
				<td><%= link_to 'delete', event, 
				                class: 'button',
				                method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
		</table>
	</section>

	<div class="page-actions">
		<%=link_to 'Add an event', new_calendar_path %>
	</div>
</article>