<!-- for meta data -->
<% title("#{@contractor.name} previous work")%>
<% description("#{@contractor.name} #{ENV['COOP_FULL_NAME']}")%>

<article>
	<header class="header">
		<h1><%= @contractor.name %>.</h1>
	</header>
	<section class='detail'>
			<% @previous_work.each do |job| %>
			<div class="work">
				<h2><%= nice_short_date(job.date)%> - <%= job.worktype.title %> (<%= show_money(job.cost)%>)</h2>
				<p><%=	job.details %></p>
			</div>
			<% end %>
	</section>
</article>
	<div class="page-actions">
		<%=link_to 'Contractor List', contractors_list_path%>
	</div>
