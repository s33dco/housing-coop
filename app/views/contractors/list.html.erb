<!-- for meta data -->
<% title("#{controller_name.titleize}")%>
<% description("Approved Contractors #{ENV['COOP_FULL_NAME']}")%>


<article>

	<header class="header">
		<h1>Contractor List</h1>
	</header>

	<section class='contractor-list'>
		<table>
			<% @contractors.each do |contractor| %>
			<tr>
				<td><%= contractor.name %></td>
				<td><%=	truncate(contractor.details, length: 90, separator: ' ') %></td>
				<td><%= contractor.phone %></td>
				<td class='hide'><%= contractor.email %></td>
				<td><%=link_to pluralize(contractor.maintenances.size, 'job'), contractor_path(contractor) %></td>
			</tr>
			<% end %>
		</table>
	</section>



</article>
	<div class="page-actions">
	</div>